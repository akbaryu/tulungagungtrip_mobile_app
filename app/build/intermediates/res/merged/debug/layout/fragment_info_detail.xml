<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    android:padding="@dimen/dimen_5dp"
    android:paddingLeft="17.0dip"
    android:paddingRight="17.0dip" >

    <TextView
        android:id="@+id/tnama"
        style="@style/DetailTextJudul"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_detail_judul" />

    <ScrollView
        android:id="@+id/scrool"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tnama"
        android:paddingTop="3dip" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dip"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/idicon"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginBottom="8dip"
                android:orientation="horizontal" >
            </LinearLayout>

           <RelativeLayout
                android:id="@+id/data"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_below="@+id/idicon"
                android:layout_marginBottom="8dip"
                android:background="@drawable/btn_detail_wisata"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/ttanggal"
                    style="@style/DetailIsiTextJudul"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="7dip"
                    android:layout_marginLeft="7dip" 
                    android:layout_alignParentRight="true"/>


                <TextView
                    android:id="@+id/tinfo"
                    style="@style/DetailIsiTextJudul"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ttanggal"
                    android:layout_marginTop="10dip"
                    android:layout_marginBottom="20dip"
                    android:layout_marginLeft="7dip"
					android:text="info"
                    android:textStyle="normal" />
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>