<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    android:padding="@dimen/dimen_5dp"
    android:paddingLeft="17.0dip"
    android:paddingRight="17.0dip" >

    <TextView
        android:id="@+id/twisata"
        style="@style/DetailTextJudul"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_detail_icon" />

    <ScrollView
        android:id="@+id/scrool"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/twisata"
        android:paddingTop="3dip" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dip"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/gambar"
                android:layout_width="fill_parent"
                android:layout_height="200dip"
                android:layout_gravity="center"
                android:gravity="center" >
            </ImageView>

            <LinearLayout
                android:id="@+id/idicon"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_below="@+id/gambar"
                android:layout_marginBottom="8dip"
                android:orientation="horizontal" >

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/idlokasi"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_below="@+id/idicon"
                android:layout_marginBottom="8dip"
                android:background="@drawable/btn_detail_wisata"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/lokasi"
                    style="@style/DetailSubTextJudul"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dip"
                    android:text="Lokasi :" />

                <TextView
                    android:id="@+id/talamat"
                    style="@style/DetailIsiTextJudul"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lokasi"
                    android:layout_marginBottom="7dip"
                    android:layout_marginLeft="7dip" />
                
                <TextView
                    android:id="@+id/jarak"
                    style="@style/DetailSubTextJudul"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                     android:layout_below="@+id/talamat"
                    android:layout_marginLeft="7dip"
                    android:textSize="14dip"
                    android:text="Jarak Lokasi :" />

                <TextView
                    android:id="@+id/tjarak"
                    style="@style/DetailIsiTextJudul"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/jarak"
                    android:textSize="11dip"
                    android:textStyle="normal|italic"
                    android:layout_marginBottom="20dip"
                    android:layout_marginLeft="7dip" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/idketerangan"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_below="@+id/idlokasi"
                android:layout_marginBottom="8dip"
                android:background="@drawable/btn_detail_wisata"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/keterangan_wisata"
                    style="@style/DetailSubTextJudul"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dip"
                    android:text="Deskripsi :" />

                <TextView
                    android:id="@+id/tketerangan_wisata"
                    style="@style/DetailIsiTextJudul"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/keterangan_wisata"
                    android:layout_marginLeft="7dip" />
            </RelativeLayout>

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>